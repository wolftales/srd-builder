{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wolftales.github.io/srd-builder/schemas/monster.schema.json",
  "title": "Monster",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "name",
    "page",
    "src",
    "armor_class",
    "hit_points",
    "ability_scores"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Stable identifier for the monster entry"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name"
    },
    "page": {
      "description": "Source page reference",
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "integer",
          "minimum": 0
        }
      ]
    },
    "src": {
      "type": "string",
      "minLength": 1,
      "description": "Source abbreviation (e.g. SRD)"
    },
    "armor_class": {
      "description": "Armor class value or breakdown",
      "oneOf": [
        {
          "type": "integer",
          "minimum": 0
        },
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "additionalProperties": true
        }
      ]
    },
    "hit_points": {
      "description": "Hit point total or expression",
      "oneOf": [
        {
          "type": "integer",
          "minimum": 0
        },
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "additionalProperties": true
        }
      ]
    },
    "ability_scores": {
      "type": "object",
      "description": "Ability score block keyed by ability name",
      "properties": {
        "str": {
          "type": "integer"
        },
        "dex": {
          "type": "integer"
        },
        "con": {
          "type": "integer"
        },
        "int": {
          "type": "integer"
        },
        "wis": {
          "type": "integer"
        },
        "cha": {
          "type": "integer"
        }
      },
      "additionalProperties": true
    }
  }
}
