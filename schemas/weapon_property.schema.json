{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/wolftales/srd-builder/schemas/weapon_property.schema.json",
  "version": "1.0.0",
  "last_modified": "2025-12-23",
  "title": "Weapon Property",
  "description": "A weapon property in D&D 5e (e.g., finesse, versatile, heavy)",
  "type": "object",
  "required": [
    "id",
    "simple_name",
    "name",
    "description",
    "page",
    "source"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^weapon_property:",
      "description": "Unique identifier with weapon_property: prefix (e.g., 'weapon_property:finesse')"
    },
    "simple_name": {
      "type": "string",
      "pattern": "^[a-z_]+$",
      "description": "Machine-readable name (e.g., 'finesse')"
    },
    "name": {
      "type": "string",
      "description": "Display name (e.g., 'Finesse')"
    },
    "description": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Array of description paragraphs from SRD"
    },
    "page": {
      "type": "integer",
      "minimum": 1,
      "description": "SRD page number where this property is described"
    },
    "source": {
      "type": "string",
      "description": "Source document (e.g., 'SRD_CC_v5.1')"
    }
  }
}
